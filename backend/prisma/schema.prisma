generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  users     User[]
  products  Product[]
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  passwordHash   String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
}

model Product {
  id                Int          @id @default(autoincrement())
  organization      Organization @relation(fields: [organizationId], references: [id])
  organizationId    Int
  name              String
  sku               String
  description       String?
  quantityOnHand    Int          @default(0)
  costPrice         Float?
  sellingPrice      Float?
  lowStockThreshold Int?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@unique([organizationId, sku])
}
